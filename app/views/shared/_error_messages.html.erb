<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger" role='alert'>
			The form contains <%= pluralize(@user.errors.count, "error") %>
		</div>
		<ul>
		<% @user.errors.full_messages.each do |msg| %> <!--The .error.full_messages is an array of error messages so thats why you can use a loop here-->
			<li>* <%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>